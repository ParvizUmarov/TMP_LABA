<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.laba_2_1_client_.Controller">
  <TextArea fx:id="area" editable="false" VBox.vgrow="ALWAYS"/>
  <HBox>
    <TextField fx:id="messageField" HBox.hgrow="ALWAYS" promptText="Enter message ... " onAction="#sendMessageAction"/>
    <Button text="send" onAction="#sendMessageAction"/>
  </HBox>

</VBox>
